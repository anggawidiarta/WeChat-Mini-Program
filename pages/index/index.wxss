.title {
  font-weight: bold;
  margin-bottom: 25px;
  text-align: center;
}

.container {
  padding: 20px;
  min-height: 100vh;
}

.input-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20px;
}

input {
  flex: 1;
  margin-right: 10px;
}

.task-list {
  border-top: 1px solid #ddd;
  width: 100%;
}

.task-item {
  display: flex;
  align-items: flex-start;
  align-items: center;
  justify-content: space-between;
  flex-direction: row;
  gap: 8px;
  padding: 10px 0;
  border-bottom: 1px solid #ddd;
}